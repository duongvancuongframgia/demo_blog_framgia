<% provide(:title, @entry.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'partial/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Title: <%= @entry.title %></h3>
    <p><%= simple_format @entry.body %></p>
    <span id="comments-<%= @entry.id %>"></span>
    <ol class="entries" id="comments-<%= @entry.id %>">
    <% if @comments.any? %>
      <%= render @comments %>
    <% end %>
    </ol>
    <%= will_paginate @comments %>
    <%= render 'partial/comment_form' if logged_in? %>
  </div>
</div>