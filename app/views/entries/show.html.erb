<% provide(:title, @entry.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'partial/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Title: <%= @entry.title %></h3>
    <p><%= @entry.body %></p>
    <% if @comments.any? %>
      <ol class="entries" id="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
    <%= render 'partial/comment_form' if logged_in? %>
  </div>
</div>