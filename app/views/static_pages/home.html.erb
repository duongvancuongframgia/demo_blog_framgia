<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'partial/user_info' %>
      </section>
      <section class="stats">
        <%= render 'partial/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Entry Feed</h3>
      <%= render 'partial/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Cuong's Blog</h1>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render 'entries' %>
    </div>
  </div>
<% end %>