<%= form_for(@user) do |f| %>
  <%= render 'partial/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control input-sm chat-input' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control input-sm chat-input' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control input-sm chat-input' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control input-sm chat-input' %>
  <div class="wrapper">
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-md" %>
  </div>
<% end %>
